@model List<Product>

@if (TempData["success"] != null)
{
	<h2>@TempData["success"]</h2>
}

	<div class="container">

	<div class="row pt-4 pb-3" >
		<div class ="col-6">
			<h2 class="text-primary"> Product List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-action="Create" asp-controller="Product" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i> Create a new Productory
			</a>
		</div>
	</div>
<table class="table table-bordered table-striped">
	<thead>
	<tr>
		<th>
			Titel
		</th>

		<th>
			ISBN

		</th>

		<th>
			Price

		</th>

		

		<th>
		Category

		</th>


		<th>
			Actions	
		</th>

	</tr>
	</thead>


	<tbody>
	
		@foreach (var obj in Model)
		{
			
			<tr>
				<td>
					@obj.Title
				</td>
				<td>
				@obj.ListPrice
				</td>
				<td>
				@obj.CategId
				</td>


				<td class="text-center">
						<a asp-controller="Product" asp-route-ProductId="@obj.Id" asp-action="Edit"><i class="bi bi-pencil-square"></i></a>
						<a asp-controller="Product" asp-route-ProductId="@obj.Id" asp-action="Delete"><i class="bi bi-trash3-fill"></i></a>
					</td>

			</tr>
	
		}
</table>

</div>